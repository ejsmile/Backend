@{
    ViewBag.Title = "Tariff List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts {

    <link href="~/Content/CustomStyle.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/tariff_reference.js"></script>
}
<div ng-app="demoModule" id="body">
    <div ng-controller="demoCtrl">
        <h2>Tariff Reference</h2>

        <h3>List of Tariff</h3>

        <table ng-cloak>
            <thead>
                <tr>
                    <th style="display: none;">ID</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Deleted</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="items in tariffsData">
                    <td hidden="hidden">{{items.Id}}</td>
                    <td>{{items.Name}}</td>
                    <td>{{items.Category}}</td>
                    <td>{{items.Price | currency:'&#8377;':2}}</td>
                    <td>
                        <button ng-model="$scope.Product"
                                ng-click="edit(tariffsData[$index])">
                            Edit
                        </button>
                        <button ng-click="delete($index)">Delete</button>
                    </td>
                    <td>{{items.Deleted}}</td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="6">
                        <hr />
                    </td>
                </tr>
                <tr>
                    <td>Total :</td>
                    <td></td>
                    <td>
                        <label ng-bind="total() |
      currency:'&#8377;':2"></label>
                    </td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
        <br />
        <div style="border-top: solid 2px #282828; width: 430px; height: 10px"> </div>

        <div ng-show="Tariff.Id != '' ">
            <div>
                <h2>Update Tariff</h2>
            </div>
            <div hidden="hidden">
                <label for="id">Id</label>
                <input type="text" data-ng-model="Tariff.Id" />
            </div>
            <div>
                <label for="name">Name</label>
                <input type="text" data-ng-model="Tariff.Name" />
            </div>

            <div>
                <label for="category">Category</label>
                <input type="text" data-ng-model="Tariff.Category" />
            </div>

            <div>
                <label for="price">Price</label>
                <input type="text" data-ng-model="Tariff.Price" />
            </div>
            <div>
                <label for="price">Deleted</label>
                <input type="checkbox" data-ng-model="Tariff.Deleted" />
            </div>
            <br />
            <div>
                <button data-ng-click="update()">Update</button>
                <button data-ng-click="cancel()">Cancel</button>
            </div>
        </div>

        <div ng-hide="Tariff.Id != '' ">
            <div>
                <h2>Add New Tariff</h2>
            </div>
            <div>
                <label for="name">Name</label>
                <input type="text" data-ng-model="Tariff.Name" />
            </div>

            <div>
                <label for="category">Category</label>
                <input type="text" data-ng-model="Tariff.Category" />
            </div>

            <div>
                <label for="price">Price</label>
                <input type="text" data-ng-model="Tariff.Price" />
            </div>
            <div>
                <label for="price">Deleted</label>
                <input type="checkbox" data-ng-model="Tariff.Deleted" />
            </div>
            <br />
            <div>
                <button data-ng-click="save()">Save</button>
                <button data-ng-click="clear()">Clear</button>
            </div>
        </div>
    </div>
</div>